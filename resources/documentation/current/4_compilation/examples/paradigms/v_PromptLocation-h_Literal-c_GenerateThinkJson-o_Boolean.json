{
  "metadata": {
    "description": "Generate boolean judgement using LLM with vertical prompt template and horizontal literal data. Parses JSON response and extracts 'result' field (boolean).",
    "inputs": {
      "vertical": {
        "prompt_template": "Path to prompt file (perception-wrapped, stripped at runtime)"
      },
      "horizontal": {
        "data": "Runtime data (value concept has perceptual sign, MVP perceives it)"
      }
    },
    "outputs": {
      "type": "Boolean",
      "description": "Boolean result from 'is_vague' field in LLM JSON response, wrapped as truth_value"
    }
  },
  "env_spec": {
    "tools": [
      {
        "tool_name": "llm",
        "affordances": [
          {
            "affordance_name": "generate",
            "call_code": "result = tool.generate"
          }
        ]
      },
      {
        "tool_name": "formatter_tool",
        "affordances": [
          {
            "affordance_name": "clean_code",
            "call_code": "result = tool.clean_code"
          },
          {
            "affordance_name": "parse",
            "call_code": "result = tool.parse"
          },
          {
            "affordance_name": "get",
            "call_code": "result = tool.get"
          },
          {
            "affordance_name": "wrap",
            "call_code": "result = tool.wrap"
          }
        ]
      },
      {
        "tool_name": "prompt_tool",
        "affordances": [
          {
            "affordance_name": "read_now",
            "call_code": "result = tool.read(params['template_name'])"
          },
          {
            "affordance_name": "create_template_function",
            "call_code": "result = tool.create_template_function(template=params['template'])"
          }
        ]
      },
      {
        "tool_name": "composition_tool",
        "affordances": [
          {
            "affordance_name": "compose",
            "call_code": "result = tool.compose(plan=params['plan'], return_key=params.get('return_key'))"
          }
        ]
      },
      {
        "tool_name": "perception_router",
        "affordances": [
          {
            "affordance_name": "strip_sign",
            "call_code": "result = tool.strip_sign(params['token'])"
          }
        ]
      }
    ]
  },
  "sequence_spec": {
    "steps": [
      {
        "step_index": 1,
        "affordance": "perception_router.strip_sign",
        "params": {
          "token": {"__type__": "MetaValue", "key": "states.vertical"}
        },
        "result_key": "raw_prompt_path"
      },
      {
        "step_index": 2,
        "affordance": "prompt_tool.read_now",
        "params": {
          "template_name": {"__type__": "MetaValue", "key": "raw_prompt_path"}
        },
        "result_key": "prompt_obj"
      },
      {
        "step_index": 3,
        "affordance": "prompt_tool.create_template_function",
        "params": {
          "template": {"__type__": "MetaValue", "key": "prompt_obj"}
        },
        "result_key": "template_fn"
      },
      {
        "step_index": 4,
        "affordance": "llm.generate",
        "params": {},
        "result_key": "generate_fn"
      },
      {
        "step_index": 5,
        "affordance": "formatter_tool.clean_code",
        "params": {},
        "result_key": "clean_code_fn"
      },
      {
        "step_index": 6,
        "affordance": "formatter_tool.parse",
        "params": {},
        "result_key": "parse_fn"
      },
      {
        "step_index": 7,
        "affordance": "formatter_tool.get",
        "params": {},
        "result_key": "get_fn"
      },
      {
        "step_index": 8,
        "affordance": "formatter_tool.wrap",
        "params": {},
        "result_key": "wrap_fn"
      },
      {
        "step_index": 9,
        "affordance": "composition_tool.compose",
        "params": {
          "plan": [
            {
              "output_key": "filled_prompt",
              "function": {"__type__": "MetaValue", "key": "template_fn"},
              "params": {"__positional__": "__initial_input__"}
            },
            {
              "output_key": "llm_response",
              "function": {"__type__": "MetaValue", "key": "generate_fn"},
              "params": {"__positional__": "filled_prompt"}
            },
            {
              "output_key": "cleaned_response",
              "function": {"__type__": "MetaValue", "key": "clean_code_fn"},
              "params": {"__positional__": "llm_response"}
            },
            {
              "output_key": "parsed_json",
              "function": {"__type__": "MetaValue", "key": "parse_fn"},
              "params": {"__positional__": "cleaned_response"}
            },
            {
              "output_key": "result_value",
              "function": {"__type__": "MetaValue", "key": "get_fn"},
              "params": {"dictionary": "parsed_json"},
              "literal_params": {"key": "result"}
            },
            {
              "output_key": "final_result",
              "function": {"__type__": "MetaValue", "key": "wrap_fn"},
              "params": {"__positional__": "result_value"},
              "literal_params": {"type": "truth_value"}
            }
          ],
          "return_key": "final_result"
        },
        "result_key": "instruction_fn"
      }
    ]
  }
}

