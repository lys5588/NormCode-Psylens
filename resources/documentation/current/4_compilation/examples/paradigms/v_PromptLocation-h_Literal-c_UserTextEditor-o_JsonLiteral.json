{
  "metadata": {
    "description": "Get text input from user via text editor. Shows prompt template with context data, wraps user response as literal.",
    "inputs": {
      "vertical": {
        "prompt_template": "Path to prompt file (perception-wrapped, stripped at runtime)"
      },
      "horizontal": {
        "data": "Runtime data (value concept has perceptual sign, MVP perceives it) - shown as context to user"
      }
    },
    "outputs": {
      "type": "TextLiteral",
      "description": "The user's text response, wrapped as literal %(response)"
    }
  },
  "env_spec": {
    "tools": [
      {
        "tool_name": "user_input",
        "affordances": [
          {
            "affordance_name": "create_text_editor_function",
            "call_code": "result = tool.create_text_editor_function(prompt_key='prompt_text', initial_text_key='initial_text')"
          }
        ]
      },
      {
        "tool_name": "formatter_tool",
        "affordances": [
          {
            "affordance_name": "wrap",
            "call_code": "result = tool.wrap"
          }
        ]
      },
      {
        "tool_name": "prompt_tool",
        "affordances": [
          {
            "affordance_name": "read_now",
            "call_code": "result = tool.read(params['template_name'])"
          },
          {
            "affordance_name": "create_template_function",
            "call_code": "result = tool.create_template_function(template=params['template'])"
          }
        ]
      },
      {
        "tool_name": "composition_tool",
        "affordances": [
          {
            "affordance_name": "compose",
            "call_code": "result = tool.compose(plan=params['plan'], return_key=params.get('return_key'))"
          }
        ]
      },
      {
        "tool_name": "perception_router",
        "affordances": [
          {
            "affordance_name": "strip_sign",
            "call_code": "result = tool.strip_sign(params['token'])"
          }
        ]
      }
    ]
  },
  "sequence_spec": {
    "steps": [
      {
        "step_index": 1,
        "affordance": "perception_router.strip_sign",
        "params": {
          "token": {"__type__": "MetaValue", "key": "states.vertical"}
        },
        "result_key": "raw_prompt_path"
      },
      {
        "step_index": 2,
        "affordance": "prompt_tool.read_now",
        "params": {
          "template_name": {"__type__": "MetaValue", "key": "raw_prompt_path"}
        },
        "result_key": "prompt_obj"
      },
      {
        "step_index": 3,
        "affordance": "prompt_tool.create_template_function",
        "params": {
          "template": {"__type__": "MetaValue", "key": "prompt_obj"}
        },
        "result_key": "template_fn"
      },
      {
        "step_index": 4,
        "affordance": "user_input.create_text_editor_function",
        "params": {},
        "result_key": "user_input_fn"
      },
      {
        "step_index": 5,
        "affordance": "formatter_tool.wrap",
        "params": {},
        "result_key": "wrap_fn"
      },
      {
        "step_index": 6,
        "affordance": "composition_tool.compose",
        "params": {
          "plan": [
            {
              "output_key": "filled_prompt",
              "function": {"__type__": "MetaValue", "key": "template_fn"},
              "params": {"__positional__": "__initial_input__"}
            },
            {
              "output_key": "user_response",
              "function": {"__type__": "MetaValue", "key": "user_input_fn"},
              "params": {
                "prompt_text": "filled_prompt"
              },
              "literal_params": {
                "initial_text": ""
              }
            },
            {
              "output_key": "final_result",
              "function": {"__type__": "MetaValue", "key": "wrap_fn"},
              "params": {"__positional__": "user_response"},
              "literal_params": {"type": "literal"}
            }
          ],
          "return_key": "final_result"
        },
        "result_key": "instruction_fn"
      }
    ]
  }
}

